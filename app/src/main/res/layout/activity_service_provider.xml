<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceProvider">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#000000">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:id="@+id/tvWelcomeServiceProvider"
            android:textColor="#E0115F"
            android:gravity="center"
            android:textSize="25sp"/>
        
        
        <Space
            android:layout_width="match_parent"
            android:layout_height="25sp" />

        <Button
            android:id="@+id/btnLogOutServiceProvider"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#E0115F"
            android:onClick="btnLogOutServiceProvider"
            android:text="LOG out" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <Button
            android:id="@+id/btnCompleteProfile"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#E0115F"
            android:onClick="btnCompleteProfileClick"
            android:text="Complete profile" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />


    </LinearLayout>

</android.widget.RelativeLayout>
