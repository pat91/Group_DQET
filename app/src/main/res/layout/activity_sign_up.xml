<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="#000000"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <EditText
            android:id="@+id/etUserUsername"
            android:layout_width="278dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:hint="Username"
            android:textColor="#fff"
            android:textColorHint="#E0115F" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />


        <EditText
            android:id="@+id/etUserEmail"
            android:layout_width="278dp"
            android:layout_height="41dp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:hint="Email"
            android:textColorHint="#E0115F" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <EditText
            android:id="@+id/etUserPassword"
            android:layout_width="278dp"
            android:layout_height="41dp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:password="true"
            android:hint="Password"
            android:textColorHint="#E0115F" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Choose user type (service provider OR owner):"
            android:textColor="#fff"
            android:textSize="18sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <EditText
            android:id="@+id/etUserType"
            android:layout_width="278dp"
            android:layout_height="41dp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:hint="User Type"
            android:textColorHint="#E0115F"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="17dp" />

        <Button
            android:id="@+id/btnJoinNow"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#E0115F"
            android:onClick="btnJoinNowClick"
            android:text="Join Now" />


    </LinearLayout>

</android.widget.RelativeLayout>
