<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookService">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#000000">


        <TextView
            android:id="@+id/textBooked"
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:gravity="center"
            android:text="You successfully booked a service"
            android:textColor="#E0115F"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnLogOutBooked"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:background="#E0115F"
            android:layout_gravity="center"
            android:onClick="btnRateService"
            android:text="Retrun to Options" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <Button
            android:id="@+id/btnRate"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:background="#E0115F"
            android:layout_gravity="center"
            android:onClick="btnRateService"
            android:text="Rate this service" />


    </LinearLayout>
</android.widget.RelativeLayout>
