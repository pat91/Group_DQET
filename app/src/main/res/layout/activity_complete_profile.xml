<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompleteProfile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#000000">


        <EditText
            android:id="@+id/etNameCompany"
            android:layout_width="278dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:gravity="center"
            android:hint="Name of the company"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#E0115F" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/etAddressCompany"
            android:background="@drawable/rounded_edittext"
            android:layout_width="278dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:gravity="center"
            android:hint="Address"
            android:textColor="#FFFFFF"
            android:textColorHint="#E0115F"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="19dp" />

        <EditText
            android:id="@+id/etPhoneCompany"
            android:background="@drawable/rounded_edittext"
            android:layout_width="278dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:gravity="center"
            android:hint="Phone number"
            android:textColor="#FFFFFF"
            android:textColorHint="#E0115F"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <EditText
            android:id="@+id/etGeneralDescription"
            android:background="@drawable/rounded_edittext"
            android:layout_width="278dp"
            android:layout_height="100dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:gravity="center"
            android:hint="General description"
            android:textColor="#FFFFFF"
            android:textColorHint="#E0115F"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="21dp" />

        <EditText
            android:id="@+id/etLiscensed"
            android:background="@drawable/rounded_edittext"
            android:layout_width="278dp"
            android:layout_height="41dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:gravity="center"
            android:hint="Liscensed (yes or no)"
            android:textColor="#FFFFFF"
            android:textColorHint="#E0115F"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="26dp" />

        <Button
            android:id="@+id/etSaveProfile"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#E0115F"
            android:onClick="btnSaveProfile"
            android:text="Save profile" />





        />
        />

    </LinearLayout>
</android.widget.RelativeLayout>